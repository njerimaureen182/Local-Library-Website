extends layout

block content
  br 
  br
  h2= title
  br

  ul(class="bookinstance-links")
    each val in bookinstance_list
      li 
        a(href=val.url) #{val.book.title} : #{val.imprint} - 
        if val.status=='Available'
          span.badge.badge-pill.bg-success.p-1 #{val.status}
        else if val.status=='Maintenance'
          span.badge.badge-pill.bg-danger.p-1 #{val.status}
        else
          span.badge.badge-pill.bg-warning.p-1 #{val.status} 
        if val.status!='Available'
          span.font-weight-bold.text-muted  (Due: #{val.due_back_formatted} )

    else
      li There are no book copies in this library.